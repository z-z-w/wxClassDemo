/* pages/result/result.wxss */
page{
  height: 100%;
}
.result-container{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 60%;
  background: linear-gradient(to top, #fe6953, #fd4539);
  position: relative;
}

.score-wrapper{
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 50%;
}
.score{
  font-size: 96rpx;
  color: #fff;
}
.rating{
  font-size: 48rpx;
  color: #fff;
}
.result-text{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.nav-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.nav-item-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 45%;
  padding: 20rpx;
} 
.nav-img{
  width: 50rpx;
  height: 60rpx;
  margin: 30rpx;
}
.nav-item{
  display: flex;
  flex-direction: column;
}
.nav-title{
  font-size: 36rpx;
  font-weight: 600;
  padding-bottom: 15rpx;
}
.nav-text{
  font-size: 24rpx;
  color: #666;
}
.wrong-num{
  padding: 0 5rpx;
  color: orangered;
}